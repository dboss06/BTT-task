<Window x:Class="WPSCloneUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPS Office"
        Height="800"
        Width="1400"
        WindowStyle="None"
        MinHeight="600"
        MinWidth="1000"
        UseLayoutRounding="True"
        Background="#F0F0F0">
    <Window.Resources>
        <!-- Basic Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="6,6,0,0">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Active Tab Style (white background) -->
        <Style x:Key="ActiveTab" TargetType="Button" BasedOn="{StaticResource TabButton}">
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Window Control Buttons -->
        <Style x:Key="WindowButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Menu Button Style -->
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Active Menu Button (with blue underline) -->
        <Style x:Key="ActiveMenuButton" TargetType="Button" BasedOn="{StaticResource MenuButton}">
            <Setter Property="BorderBrush" Value="#2B579A"/>
            <Setter Property="Foreground" Value="#2B579A"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <!-- Close Button (red on hover) -->
        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource WindowButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RibbonButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}"
                        CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="BorderBrush" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Ribbon Icon Button (Square) -->
        <Style x:Key="RibbonIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="BorderBrush" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Ribbon Dropdown Style -->
        <Style x:Key="RibbonDropdown" TargetType="ComboBox">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Ribbon Separator -->
        <Style x:Key="RibbonSeparator" TargetType="Border">
            <Setter Property="Width" Value="1"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="5,8,5,8"/>
        </Style>

        <!-- Large Ribbon Button (with icon and text below) -->
        <Style x:Key="LargeRibbonButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}"
                        CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="BorderBrush" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Status Bar Button Style -->
        <Style x:Key="StatusBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Status Bar Icon Button -->
        <Style x:Key="StatusBarIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Toggle Button Style (for AI Spell Check) -->
        <Style x:Key="StatusBarToggle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="44"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#DEDEDE" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Margin="-5,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource TabButton}" Background="#DEDEDE" Padding="10,8" Margin="5,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#E74C3C" Width="20" Height="20" CornerRadius="4" Margin="0,0,6,0">
                                <TextBlock Text="" Foreground="#FFFFFF" FontFamily="Segoe MDL2 Assets" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Home" Foreground="#333" FontSize="13" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ActiveTab}" Padding="10,10" Margin="2,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#2B579A" Width="18" Height="18" CornerRadius="3" Margin="0,0,8,0">
                                <TextBlock Text="W" Foreground="#FFFFFF" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11"/>
                            </Border>
                            <TextBlock Text="Document1" Foreground="#333" FontSize="13" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Width="24" Height="24" Margin="0,0,5,0">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#666"/>
                    </Button>
                    <Button Style="{StaticResource TabButton}" Padding="8,8" Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontSize="16" Foreground="#666" Margin="0,0,6,0"/>
                            <TextBlock Text="New" FontSize="13" Padding="3,3" Foreground="#666"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource IconButton}" Width="36" Height="36">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontWeight="Light" FontSize="14"/>
                    </Button>
                    <Button Background="Transparent" BorderThickness="1" BorderBrush="#3B9EFF" Padding="12,6" Margin="5,0" Cursor="Hand" Height="28" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="#3B9EFF" Margin="0,0,6,0"/>
                            <TextBlock Text="Sign in" FontSize="12" Foreground="#3B9EFF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Background="#3B9EFF" Foreground="White" BorderThickness="0" Padding="15,6" Margin="5,0" Height="28" FontSize="12" Cursor="Hand" VerticalAlignment="Center">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="14"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚡" FontSize="12" Margin="0,0,4,0"/>
                            <TextBlock Text="Upgrade now" FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource WindowButton}" Content="&#xE921;" x:Name="btnMinimize" Click="BtnMinimize_Click"/>
                    <Button Style="{StaticResource WindowButton}" Content="&#xE922;" x:Name="btnMaximize" Click="BtnMaximize_Click"/>
                    <Button Style="{StaticResource WindowButton}" Content="&#xE8BB;" x:Name="btnClose" Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="1"  BorderBrush="#E0E0E0" BorderThickness="0,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0">
                    <Button Style="{StaticResource ActiveMenuButton}" Content="Home"/>
                    <Button Style="{StaticResource MenuButton}" Content="Insert"/>
                    <Button Style="{StaticResource MenuButton}" Content="Page Layout"/>
                    <Button Style="{StaticResource MenuButton}" Content="Refrences"/>
                    <Button Style="{StaticResource MenuButton}" Content="Review"/>
                    <Button Style="{StaticResource MenuButton}" Content="View"/>
                    <Button Style="{StaticResource MenuButton}" Content="Tools"/>
                    <Button Style="{StaticResource MenuButton}" Padding="12, 10" Background="#7B2CBF">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="✨" FontSize="14" Margin="0,0,6,0" Foreground="#FAFAFA"/>
                            <TextBlock Text="WPS AI" FontSize="13" Foreground="#FAFAFA"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Style="{StaticResource IconButton}" Width="36" Height="36">
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16"/>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                        <Ellipse Width="8" Height="8" Fill="#999" Margin="0,0,6,0"/>
                        <TextBlock Text="Not saved" FontSize="12" Foreground="#666" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Background="#2B579A" Foreground="White" BorderThickness="0" Padding="15,6" Margin="5,0" Height="28" FontSize="12" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Share" FontSize="12"/>
                            <TextBlock Text=" ▼" FontSize="9" Margin="0,3,0,0"/>
                        </StackPanel>
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Width="36" Height="36">
                        <TextBlock Text="..." FontSize="16" Foreground="#666"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}" Width="36" Height="36">
                        <TextBlock Text="^" FontSize="12" Foreground="#666"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="2" Background="#F8F8F8" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,8" Margin="10,2" CornerRadius="20">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Margin="0,0,5,0">
                        <Button Style="{StaticResource RibbonIconButton}">
                            <TextBlock Text="☰" FontSize="16" Foreground="#666"/>
                        </Button>
                        <Button Style="{StaticResource RibbonIconButton}">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#666"/>
                        </Button>
                        <Button Style="{StaticResource RibbonIconButton}">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#666"/>
                        </Button>
                        <Button Style="{StaticResource RibbonIconButton}">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#666"/>
                        </Button>
                        <Button Style="{StaticResource RibbonIconButton}">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#666"/>
                        </Button>
                        <Button Style="{StaticResource RibbonIconButton}">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#666"/>
                        </Button>
                    </StackPanel>
                    <Border Style="{StaticResource RibbonSeparator}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,5,0">
                        <Button Style="{StaticResource LargeRibbonButton}" Width="50" Foreground="#666">
                            <StackPanel>
                                <Border Background="#FFF3E0" Width="32" Height="32" CornerRadius="4" HorizontalAlignment="Center">
                                    <TextBlock Text="🖌️" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Format" FontSize="8" TextAlignment="Center" Margin="0,0,0,0" Foreground="#333"/>
                                <TextBlock Text="Painter" FontSize="8" Foreground="#333" TextAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <StackPanel Margin="5,0">
                            <Button Style="{StaticResource RibbonButton}" Height="40" Padding="10,8" Foreground="#666">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📋" FontSize="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Paste" FontSize="11" VerticalAlignment="Center"/>
                                    <TextBlock Text="▼" FontSize="8" Margin="4,5,0,0"/>
                                </StackPanel>
                            </Button>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource RibbonButton}" Height="24" Padding="6,2" Foreground="#666">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="✂️" FontSize="12" Margin="0,0,4,0"/>
                                        <TextBlock Text="Cut" FontSize="10"/>
                                    </StackPanel>

                                </Button>
                                <Button Style="{StaticResource RibbonButton}" Height="24" Padding="6,2" Foreground="#666">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📄" FontSize="12" Margin="0,0,4,0"/>
                                        <TextBlock Text="Copy" FontSize="10"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <Border Style="{StaticResource RibbonSeparator}"/>
                        <StackPanel Margin="0,0,5,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <ComboBox Style="{StaticResource RibbonDropdown}" Width="140" Height="24">
                                    <ComboBoxItem Content="Calibri(Body)" IsSelected="True"/>
                                    <ComboBoxItem Content="Arial"/>
                                    <ComboBoxItem Content="Times New Roman"/>
                                </ComboBox>
                                <ComboBox Style="{StaticResource RibbonDropdown}" Width="50" Height="24" Margin="4,0,0,0">
                                    <ComboBoxItem Content="10" IsSelected="True"/>
                                    <ComboBoxItem Content="11"/>
                                    <ComboBoxItem Content="12"/>
                                    <ComboBoxItem Content="14"/>
                                </ComboBox>

                                <Button Style="{StaticResource RibbonIconButton}" Width="24" Height="24" Margin="4,0,0,0">
                                    <TextBlock Text="A↑" FontSize="10" FontWeight="Bold" Foreground="#666"/>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Width="24" Height="24" Margin="4,0,0,0">
                                    <TextBlock Text="A↓" FontSize="10" FontWeight="Bold" Foreground="#666"/>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource RibbonIconButton}" Width="28" Height="28">
                                    <TextBlock Text="B" FontWeight="Bold" FontSize="13"/>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Width="28" Height="28">
                                    <TextBlock Text="I" FontStyle="Italic" FontSize="13"/>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Width="28" Height="28">
                                    <TextBlock Text="U" TextDecorations="Underline" FontSize="13"/>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Width="28" Height="28">
                                    <TextBlock Text="S" TextDecorations="Strikethrough" FontSize="13"/>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Width="28" Height="28">
                                    <TextBlock Text="X₂" FontSize="13"/>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Width="28" Height="28">
                                    <TextBlock Text="X²" FontSize="13"/>
                                </Button>
                                <Button Style="{StaticResource RibbonButton}" Width="28" Height="28">
                                    <StackPanel>
                                        <TextBlock Foreground="#FFD700" Text="A" FontWeight="Bold" HorizontalAlignment="Center" FontSize="13"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource RibbonButton}" Width="28" Height="28">
                                    <StackPanel>
                                        <TextBlock Foreground="#FFFF00" Text="🖍️" FontWeight="Bold" HorizontalAlignment="Center" FontSize="13"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Width="28" Height="28" Foreground="#666">
                                    <TextBlock Text="🎨" FontSize="13"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <Border Style="{StaticResource RibbonSeparator}"/>
                        <StackPanel Margin="0,0,5,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Button Style="{StaticResource RibbonButton}" Height="28" Padding="8,2" Foreground="#666">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="•" FontSize="14" Margin="0,0,4,0"/>
                                        <TextBlock Text="▼" FontSize="8" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource RibbonButton}" Height="28" Padding="8,2" Foreground="#666">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="1." FontSize="11" Margin="0,0,4,0"/>
                                        <TextBlock Text="▼" FontSize="8" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Height="28" Width="28" Foreground="#666">
                                    <TextBlock Text="◄" FontSize="12"/>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Height="28" Width="28" Foreground="#666">
                                    <TextBlock Text="►" FontSize="12"/>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource RibbonIconButton}" Width="28" Height="28" Foreground="#666">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Width="28" Height="28" Foreground="#666">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Width="28" Height="28" Foreground="#666">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Width="28" Height="28" Foreground="#666">
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                </Button>
                                <Button Style="{StaticResource RibbonButton}" Height="28" Padding="6,2" Foreground="#666">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="⇅" FontSize="12" Margin="0,0,4,0"/>
                                        <TextBlock Text="▼" FontSize="8" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource RibbonIconButton}" Width="28" Height="28" Foreground="#666">
                                    <TextBlock Text="⊞" FontSize="14"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <Border Style="{StaticResource RibbonSeparator}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,5,0" VerticalAlignment="Center">
                            <Border Background="White" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="3" Padding="10,8" Height="40" Margin="0,0,8,0">
                                <TextBlock Text="Normal" FontSize="13" Foreground="#333" VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="White" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="3" Padding="10,8" Height="40">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Heading 1" FontSize="16" FontWeight="Bold" Foreground="#2B579A" VerticalAlignment="Center"/>
                                    <TextBlock Text=" ▼" FontSize="10" Foreground="#666" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        <Border Style="{StaticResource RibbonSeparator}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,5,0" VerticalAlignment="Center">
                            <Button Style="{StaticResource LargeRibbonButton}" Width="60">
                                <StackPanel>
                                    <TextBlock Text="🔍" FontSize="15" HorizontalAlignment="Center" Foreground="#666"/>
                                    <TextBlock Text="Find and" FontSize="10" Foreground="#666" TextAlignment="Center" Margin="0,4,0,0"/>
                                    <TextBlock Text="Replace" FontSize="10" Foreground="#666" TextAlignment="Center"/>
                                    <TextBlock Text="▼" FontSize="8" Foreground="#666" TextAlignment="Center" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource LargeRibbonButton}" Width="60">
                                <StackPanel>
                                    <TextBlock Text="⌕" FontSize="15" HorizontalAlignment="Center" Foreground="#666"/>
                                    <TextBlock Text="Select" FontSize="10" Foreground="#666" TextAlignment="Center" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource RibbonIconButton}" Width="40" Height="40">
                                <StackPanel>
                                    <TextBlock Text="ABC" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" Foreground="#666"/>
                                    <TextBlock Text="✓" FontSize="10" Foreground="Green" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Border Grid.Row="3" Background="#FFF4E5" BorderBrush="#FFE0B2" BorderThickness="0,1,0,1" Padding="15,10" x:Name="warningBanner">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#FF9800" Width="20" Height="20" CornerRadius="10" Margin="0,0,0,10" VerticalAlignment="Center">
                    <TextBlock Text="!" Foreground="White" FontWeight="Bold" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Text in Spanish is not being checked" Grid.Column="1" FontSize="13" Foreground="#663C00" VerticalAlignment="Center" Margin="5,0,0,10"/>
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15,0" VerticalAlignment="Center">
                    <Button Background="#2B579A" Foreground="White" BorderThickness="0" Padding="20,6" Height="28" FontSize="12" Cursor="Hand" Margin="0,0,8,0">
                        <TextBlock Text="Add" FontSize="12"/>
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Background="#2B579A" Foreground="White" BorderThickness="0" Padding="20,6" Height="28" FontSize="12" Cursor="Hand" Margin="0,0,2,0">
                        <TextBlock Text="Don't remind me again" FontSize="12"/>
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
                <Button Grid.Column="3" Background="Transparent" BorderThickness="0" Width="24" Height="24" Cursor="Hand" VerticalAlignment="Center" Click="CloseWarningBanner_Click">
                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#663C00"/>
                </Button>
            </Grid>
        </Border>
        <Border Grid.Row="4" Background="#E5E5E5">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="23*"/>
                        <RowDefinition Height="13*"/>
                    </Grid.RowDefinitions>
                    <Border Background="White" Width="816" Margin="0,40,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="499" Grid.RowSpan="2">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.2"/>
                        </Border.Effect>
                        <Grid Margin="96,48">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="Transparent" BorderBrush="#E91E63" BorderThickness="1" CornerRadius="20" Padding="15,10" HorizontalAlignment="Center" Cursor="Hand">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✨" FontSize="14" Foreground="#FDDA00" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Start Writing with WPS AI" FontSize="13" Foreground="#E91E63" VerticalAlignment="Center"/>
                                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="11" Foreground="#999" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <Grid Grid.Row="1" Margin="0,30,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                    <TextBlock Text="⫶⫶" FontSize="20" Foreground="#CCC" Margin="0,0,10,0"/>
                                    <TextBox Background="Transparent" BorderThickness="0" FontSize="14" Foreground="#999" Text='Type "@ai" and press Enter to invoke the WPS AI assistant' TextWrapping="Wrap" Width="600" AcceptsReturn="True" VerticalAlignment="Top"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

            </ScrollViewer>
        </Border>
        <Border Grid.Row="5" Background="#F0F0F0" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0" Height="25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0">
                    <Button Style="{StaticResource StatusBarButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Page: " Foreground="#666" FontSize="11"/>
                            <TextBlock Text="1/1" Foreground="#333" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    <Border Width="1" Background="#D0D0D0" Margin="5,4,5,4"/>
                    <Button Style="{StaticResource StatusBarButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Words: " Foreground="#666" FontSize="11"/>
                            <TextBlock Text="0" Foreground="#333" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    <Border Width="1" Background="#D0D0D0" Margin="5,4,5,4"/>
                    <Button Style="{StaticResource StatusBarButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="☑" Foreground="#4CAF50" Margin="0,0,6,0" FontSize="14" VerticalAlignment="Center"/>
                            <TextBlock Text="Spell Check" Foreground="#666" FontSize="11" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Border Width="1" Background="#D0D0D0" Margin="5,4,5,4"/>
                    <ToggleButton Style="{StaticResource StatusBarToggle}" IsChecked="True" x:Name="aiSpellCheckToggle">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="32" Height="16" Background="#2196F3" CornerRadius="8" Margin="0,0,6,0" VerticalAlignment="Center">
                                <Ellipse Width="12" Height="12" Fill="White" HorizontalAlignment="Right" Margin="0,0,2,0"/>
                            </Border>
                            <TextBlock Text="AI Spell Check" FontSize="11" Foreground="#666" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
                    <Button Style="{StaticResource StatusBarIconButton}">
                        <TextBlock Text="📄" Foreground="#999" FontSize="12"/>
                    </Button>
                    <Button Style="{StaticResource StatusBarIconButton}">
                        <TextBlock Text="📑" Foreground="#999" FontSize="12"/>
                    </Button>
                    <Button Style="{StaticResource StatusBarIconButton}">
                        <TextBlock Text="📋" Foreground="#999" FontSize="12"/>
                    </Button>
                    <Border Width="1" Background="#D0D0D0" Margin="5,4,5,4"/>
                    <Button Style="{StaticResource StatusBarIconButton}">
                        <TextBlock Text="▶" FontSize="11" Foreground="#666"/>
                    </Button>
                    <Border Width="1" Background="#D0D0D0" Margin="5,4,5,4"/>
                    <Button Style="{StaticResource StatusBarIconButton}">
                        <TextBlock Text="🌐" Foreground="#999" FontSize="12"/>
                    </Button>
                    <Button Style="{StaticResource StatusBarIconButton}">
                        <StackPanel>
                            <TextBlock Text="👁" FontSize="11" HorizontalAlignment="Center"/>
                            <TextBlock Text="▼" FontSize="7" Foreground="#666" HorizontalAlignment="Center" Margin="0,-2,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource StatusBarIconButton}">
                        <TextBlock Text="📷" Foreground="#999" FontSize="12"/>
                    </Button>
                    <Border Width="1" Background="#D0D0D0" Margin="5,4,5,4"/>
                    <Button Style="{StaticResource StatusBarButton}" Padding="6,2" Click="ZoomPercentage_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="80%" FontSize="11" Foreground="#333" x:Name="zoomPercentageText"/>
                            <TextBlock Text=" ▼" FontSize="8" Foreground="#999" Margin="4,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <!-- Zoom Out -->
                    <Button Style="{StaticResource StatusBarIconButton}" Click="ZoomOut_Click">
                        <TextBlock Text="➖" FontSize="10" Foreground="#666"/>
                    </Button>
                    <Slider Width="100" Height="25" Minimum="10" Maximum="500" Value="80" VerticalAlignment="Center" Margin="5,0" x:Name="zoomSlider" ValueChanged="ZoomSlider_ValueChanged"/>
                    <Button Style="{StaticResource StatusBarIconButton}" Click="ZoomIn_Click">
                        <TextBlock Text="➕" FontSize="10" Foreground="#666"/>
                    </Button>
                    <Border Width="1" Background="#D0D0D0" Margin="5,4,5,4"/>
                    <Button Style="{StaticResource StatusBarIconButton}">
                        <TextBlock Text="⛶" FontSize="12" Foreground="#666"/>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</Window>