<Window x:Class="CarSimulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Simulation"
        Height="700"
        Width="1000" MinHeight="600" MinWidth="900" UseLayoutRounding="True"
        Background="#f5f5f5" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDBDBD"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="BrakeButton" TargetType="Button" BasedOn="{StaticResource ControlButton}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="LaunchButton" TargetType="Button" BasedOn="{StaticResource ControlButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Gear Button Style -->
        <Style x:Key="GearButton" TargetType="RadioButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,2" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="🚗 Car Simulation Control Panel" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Style="{StaticResource ControlButton}" Content="▶ Play" x:Name="btnPlay" Click="BtnPlay_Click"/>
                        <Button Style="{StaticResource BrakeButton}" Content="⬛ Brake" x:Name="btnBrake" Click="BtnBrake_Click" IsEnabled="False"/>
                        <Button Style="{StaticResource ControlButton}" Content="➤ Move" x:Name="btnMove" Click="BtnMove_Click" IsEnabled="False"/>
                        <Button Style="{StaticResource LaunchButton}" Content="↻ Launch" x:Name="btnLaunch" Click="BtnLaunch_Click"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="⚙️ Gear Selection" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5" TextAlignment="Center"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Style="{StaticResource GearButton}" Content="1" GroupName="Gears" IsChecked="True" x:Name="gear1" Checked="Gear_Changed"/>
                            <RadioButton Style="{StaticResource GearButton}" Content="2" GroupName="Gears" x:Name="gear2" Checked="Gear_Changed"/>
                            <RadioButton Style="{StaticResource GearButton}" Content="3" GroupName="Gears" x:Name="gear3" Checked="Gear_Changed"/>
                            <RadioButton Style="{StaticResource GearButton}" Content="4" GroupName="Gears" x:Name="gear4" Checked="Gear_Changed"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        <Border Grid.Row="1" Background="#f5f5f5" Padding="50">
            <Grid>
                <Border BorderBrush="#333" BorderThickness="4" CornerRadius="20" Margin="50"/>
                <Rectangle Stroke="#666" StrokeThickness="2" RadiusX="15" RadiusY="15" Fill="Transparent">
                    <Rectangle.StrokeDashArray>
                        <DoubleCollection>10 5</DoubleCollection>
                    </Rectangle.StrokeDashArray>
                </Rectangle>
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="2" CornerRadius="8" Width="200" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Current Speed" FontSize="14" Foreground="#666" TextAlignment="Center" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="speedDisplay" Text="0" FontSize="36" FontWeight="Bold" Foreground="#2196F3"/>
                            <TextBlock Text="km/h" FontSize="18" Foreground="#666" VerticalAlignment="Bottom" Margin="5,0,0,8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Canvas x:Name="trackCanvas">
                    <Border x:Name="car" Background="#FF5722" Width="60" Height="40" CornerRadius="8" Canvas.Left="100" Canvas.Top="50">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="3" BlurRadius="8" Opacity="0.4"/>
                        </Border.Effect>
                        <Grid>
                            <Border Background="#D84315" Height="20" VerticalAlignment="Top" CornerRadius="6,6,0,0" Margin="10,5,10,0"/>
                            <Border Background="#90CAF9" Width="20" Height="12" VerticalAlignment="Top" HorizontalAlignment="Left" CornerRadius="2" Margin="15,7,0,0"/>
                            <Ellipse Width="12" Height="12" Fill="#212121" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,8,2"/>
                            <Ellipse Width="12" Height="12" Fill="#212121" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="8,0,0,2"/>
                        </Grid>
                    </Border>
                </Canvas>
            </Grid>
        </Border>
    </Grid>
</Window>